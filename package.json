{
  "name": "chatbot-js",
  "version": "1.0.0",
  "description": "A chatbot using Ollama's local LLM API",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "ollama": "ollama run llama3",
    "serve-all": "concurrently \"ollama run llama3\" \"nodemon server.js\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.20"
  }
}
